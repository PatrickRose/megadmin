.row.justify-content-center
  .col-sm-8.mw-75
    - unless @error
      .card
        %h1.card-header
          = "Editing Role #{@role.name}"
        = simple_form_for @role, url: :event_role, method: :put do |form|
          .card-body
            %p
            = form.input :name
            %p
            = form.input :brief
            %p Note: the brief will be overridden. Please reupload the brief to keep it.
            %p
            = form.association :team, collection: @event.teams, include_blank: false, label: link_to("Team", event_teams_path), error: "Team must be selected"
          .card-footer.d-flex
            = form.button :submit, 'Save', class: 'btn generic-button-success', method: :get
    - else
      %h2
        Error!
      %p
        = @error
