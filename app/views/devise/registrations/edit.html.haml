.row.justify-content-center
  .form-box
    %h1 Edit Account Details
    %hr
    %br

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.input :email, required: true, autofocus: true, label: 'Email:'

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}

      = f.input :name,
        label: 'Name:'

      = f.input :password,
        label: 'New Password:',
        hint: "Leave this field blank if you don't want to change it",
        required: false,
        input_html: { autocomplete: "new-password" }

      = f.input :password_confirmation,
        label: 'Confirm New Password:',
        required: false,
        input_html: { autocomplete: "new-password" }

      = f.input :current_password,
        hint: "We need your current password to confirm your changes",
        required: true,
        input_html: { autocomplete: "current-password" }

      = f.button :submit, "Update Account", class: 'btn generic-button-success'
      %br
      %br
    #{button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure? This action cannot be undone", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn generic-button-danger'}
    = link_to "Back", '/', class: 'btn generic-button'
