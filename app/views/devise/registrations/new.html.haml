.form-box
  %h2 Sign up
  %hr
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, label: 'Email:'
      = f.input :name, required: true, label: 'Name:', input_html: { autocomplete: 'name' }
      = f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" },
        label: 'Password:'
      = f.input :password_confirmation,
        required: true,
        input_html: { autocomplete: "new-password" },
        label: 'Confirm Password:'
    .form-actions
      = f.button :submit, "Sign up", class: 'btn generic-button-success'
  = render "devise/shared/links"
